---
import SectionTitle from '../common/SectionTitle.astro';
import event from '../../data/event.json';
---

<section id="testimonials" class="section-padding bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <SectionTitle class="fade-in-up">
        参加者の声
      </SectionTitle>

      <div class="grid md:grid-cols-3 gap-6">
        {event.testimonials.map((testimonial, index) => (
          <div class="bg-bg-secondary rounded-2xl p-6 relative fade-in-up stagger-item">
            <!-- Quote icon -->
            <div class="absolute -top-3 left-6">
              <span class="inline-flex items-center justify-center w-10 h-10 bg-primary-pink rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
                </svg>
              </span>
            </div>

            <div class="pt-6">
              <p class="text-gray-700 leading-relaxed mb-4">
                {testimonial.text}
              </p>
              <div class="flex items-center gap-3">
                <div class={`w-10 h-10 rounded-full flex items-center justify-center ${
                  testimonial.gender === '女性' ? 'bg-primary-pink/20' : 'bg-primary-blue/20'
                }`}>
                  <svg xmlns="http://www.w3.org/2000/svg" class={`w-5 h-5 ${
                    testimonial.gender === '女性' ? 'text-primary-pink' : 'text-primary-blue'
                  }`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-800">{testimonial.age}・{testimonial.gender}</p>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
