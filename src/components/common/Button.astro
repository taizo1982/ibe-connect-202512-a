---
interface Props {
  href?: string;
  size?: 'small' | 'medium' | 'large' | 'xl';
  variant?: 'primary' | 'outline' | 'text';
  fullWidth?: boolean;
  class?: string;
  pulse?: boolean;
}

const {
  href = '#entry',
  size = 'medium',
  variant = 'primary',
  fullWidth = false,
  class: className = '',
  pulse = false,
} = Astro.props;

const sizeClasses = {
  small: 'px-4 py-2 text-sm',
  medium: 'px-6 py-3 text-base',
  large: 'px-8 py-4 text-lg',
  xl: 'px-10 py-5 text-xl',
};

const variantClasses = {
  primary: 'bg-gradient-cta text-white shadow-lg hover:shadow-xl hover:-translate-y-0.5',
  outline: 'border-2 border-primary-pink text-primary-pink hover:bg-primary-pink hover:text-white',
  text: 'text-primary-pink hover:text-primary-pink-dark underline underline-offset-4',
};
---

<a
  href={href}
  class:list={[
    'inline-flex items-center justify-center font-bold rounded-full transition-all duration-300',
    sizeClasses[size],
    variantClasses[variant],
    fullWidth && 'w-full',
    pulse && 'animate-pulse-soft',
    className,
  ]}
>
  <slot />
</a>

<style>
  .shadow-lg {
    box-shadow: 0 4px 15px rgba(232, 122, 147, 0.4);
  }
  .hover\:shadow-xl:hover {
    box-shadow: 0 6px 20px rgba(232, 122, 147, 0.5);
  }
</style>
