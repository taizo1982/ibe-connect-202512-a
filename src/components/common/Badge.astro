---
interface Props {
  variant?: 'pink' | 'blue' | 'gold';
  class?: string;
}

const { variant = 'pink', class: className = '' } = Astro.props;

const variantClasses = {
  pink: 'bg-primary-pink/10 text-primary-pink-dark',
  blue: 'bg-primary-blue/10 text-primary-blue-dark',
  gold: 'bg-accent-gold/10 text-accent-gold',
};
---

<span
  class:list={[
    'inline-block px-4 py-1.5 rounded-full text-sm font-medium',
    variantClasses[variant],
    className,
  ]}
>
  <slot />
</span>
