---
interface Props {
  subtitle?: string;
  class?: string;
}

const { subtitle, class: className = '' } = Astro.props;
---

<div class:list={['text-center mb-10 md:mb-14', className]}>
  {subtitle && (
    <p class="text-primary-pink text-sm md:text-base font-medium mb-2 tracking-wider">
      {subtitle}
    </p>
  )}
  <h2 class="font-display text-2xl md:text-3xl lg:text-4xl font-bold text-gray-800 leading-tight relative inline-block pb-4">
    <slot />
    <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-16 h-1 bg-gradient-divider rounded-full"></span>
  </h2>
</div>
