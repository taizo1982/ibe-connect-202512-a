---
import company from '../../data/company.json';
---

<footer class="bg-gray-800 text-white py-12">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
        <div>
          <h3 class="font-display text-lg font-bold mb-4">
            {company.name}
          </h3>
          <p class="text-gray-400 text-sm leading-relaxed">
            {company.address}<br />
            TEL: {company.phone}<br />
            受付時間: {company.hours}
          </p>
        </div>

        <div>
          <h4 class="font-bold mb-4 text-sm">リンク</h4>
          <ul class="grid grid-cols-2 gap-2 text-sm">
            <li>
              <a href={company.links.about} class="text-gray-400 hover:text-white transition-colors">
                初めての方へ
              </a>
            </li>
            <li>
              <a href={company.links.party} class="text-gray-400 hover:text-white transition-colors">
                パーティー一覧
              </a>
            </li>
            <li>
              <a href={company.links.faq} class="text-gray-400 hover:text-white transition-colors">
                よくある質問
              </a>
            </li>
            <li>
              <a href={company.links.contact} class="text-gray-400 hover:text-white transition-colors">
                お問い合わせ
              </a>
            </li>
            <li>
              <a href={company.links.privacy} class="text-gray-400 hover:text-white transition-colors">
                プライバシーポリシー
              </a>
            </li>
            <li>
              <a href={company.links.terms} class="text-gray-400 hover:text-white transition-colors">
                利用規約
              </a>
            </li>
            <li>
              <a href={company.links.tokusyo} class="text-gray-400 hover:text-white transition-colors">
                特定商取引法に基づく表記
              </a>
            </li>
            <li>
              <a href={company.links.outline} class="text-gray-400 hover:text-white transition-colors">
                会社概要
              </a>
            </li>
          </ul>
        </div>
      </div>

      <div class="border-t border-gray-700 pt-8 text-center">
        <p class="text-gray-500 text-sm">
          &copy; {company.copyright}. All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>
